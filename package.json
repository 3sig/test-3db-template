{
  "name": "3db-template",
  "version": "0.0.0",
  "devDependencies": {
    "3lib-orchestrator": "github:3sig/3lib-orchestrator",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "start": "bun build main.js --outdir build --target node && bun run install-deps && bun run run",
    "install-deps": "orchestrator-install",
    "run": "cd orchestrator-deps && ./3suite-orchestrator*",
    "release": "node .3suite-utils/version-and-tag.js",
    "release:patch": "node .3suite-utils/version-and-tag.js patch",
    "release:minor": "node .3suite-utils/version-and-tag.js minor",
    "release:major": "node .3suite-utils/version-and-tag.js major"
  }
}
